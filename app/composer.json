{
    "name": "nelwhix/portfolio-api",
    "description": "api to manage projects on my portfolio website with jwt auth and mongodb",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Nelwhix\\PortfolioApi\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Nelson Isioma",
            "email": "58360242+Nelwhix@users.noreply.github.com"
        }
    ],
    "require": {
        "nikic/fast-route": "^1.3",
        "symfony/http-foundation": "^6.2",
        "rdlowrey/auryn": "^1.4",
        "nesbot/carbon": "^2.65",
        "respect/validation": "^2.2",
        "vlucas/phpdotenv": "^5.5",
        "mongodb/mongodb": "^1.12",
        "guzzlehttp/guzzle": "^7.0",
        "firebase/php-jwt": "^6.3",
        "fakerphp/faker": "^1.21",
        "symfony/uid": "^6.2",
      "ext-mongodb": "*"
    },
    "require-dev": {
        "pestphp/pest": "^1.22",
        "symfony/var-dumper": "^6.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
